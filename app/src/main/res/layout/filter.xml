<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:padding="24dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E0E0"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#BDBDBD"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filtrele ve Sırala"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gösterme Seçenekleri"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <CheckBox
            android:id="@+id/chbSadeceKendiIlanlarim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sadece Kendi İlanlarım"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            app:buttonTint="#FF9800"/>

        <CheckBox
            android:id="@+id/chbSadeceFavoriler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sadece Favorilerim"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            app:buttonTint="#FF9800"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sıralama"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/radioGroupSirala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radioFiyatArtan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fiyat: Düşükten Yükseğe"
            android:textColor="?android:attr/textColorPrimary"
            app:buttonTint="#FF9800"/>

        <RadioButton
            android:id="@+id/radioFiyatAzalan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fiyat: Yüksekten Düşüğe"
            android:textColor="?android:attr/textColorPrimary"
            app:buttonTint="#FF9800"/>

        <RadioButton
            android:id="@+id/radioTarihYeniden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tarih: Yeniden Eskiye"
            android:checked="true"
            android:textColor="?android:attr/textColorPrimary"
            app:buttonTint="#FF9800"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fiyat Aralığı (TL)"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/editMinFiyat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Min"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="12dp"
            android:textColor="?android:attr/textColorSecondary"/>

        <EditText
            android:id="@+id/editMaxFiyat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Max"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="#808080"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnFiltreUygula"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="SONUÇLARI GÖSTER"
        android:textStyle="bold"
        android:textSize="16sp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        app:cornerRadius="12dp"/>

</LinearLayout>